<main class="container container__narrow">
  <div class="header">
    <h2>Sign up</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: %>

    <div class="form__group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input" %>
    </div>

    <div class="form__group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form__input" %>
    </div>

    <div class="form__group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form__input" %>
    </div>

    <div class="form__group">
      <%= f.submit "Sign up", class: "btn btn--primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</main>
